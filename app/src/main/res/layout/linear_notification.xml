<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.20"
        android:id="@+id/imageViewSignIcon"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_traffic_giveway" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.60">

        <TextView
            android:id="@+id/textViewSignCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:textAlignment="center"
            android:text="Give way sign"
            android:textSize="24dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textViewAppearanceTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.40"
            android:text="8:40" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.20"
            android:textAlignment="center"
            android:text="Alert number"
            android:textSize="16dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textViewAlertCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.40"
            android:text="30" />
    </LinearLayout>

</LinearLayout>
